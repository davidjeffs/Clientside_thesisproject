<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="429dp"
        android:layout_height="176dp"
        android:layout_centerVertical="true"
        android:text="this is a test of the text field to see what happens if the text runs over size"
        android:layout_marginLeft="70dp"
        android:textSize="32dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:max="100"
        android:progress="0"
        android:indeterminate="false"
        android:progressDrawable="@drawable/myprogress" />

    <TextView
        android:id="@+id/numberOf"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="400dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/numberSaved"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="390dp"
        android:layout_alignParentBottom="true"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textColor="#32CD32"
        android:textSize="30dp"/>

</RelativeLayout>